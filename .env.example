# Copy this file to .env and fill in your actual API keys
# This template shows all required and optional environment variables

# Google Places API Configuration
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Rakuten Travel API Configuration  
RAKUTEN_APPLICATION_ID=your_rakuten_application_id_here
RAKUTEN_AFFILIATE_ID=your_rakuten_affiliate_id_here

# Application Configuration
DEFAULT_SEARCH_RADIUS_M=800
JST_TZ=Asia/Tokyo

# Optional: Cache TTL Settings (in seconds)
STATION_CACHE_TTL=86400  # 24 hours
HOTEL_CACHE_TTL=900      # 15 minutes

# Optional: Rate Limiting
GOOGLE_PLACES_RATE_LIMIT_PER_SECOND=10
RAKUTEN_RATE_LIMIT_PER_SECOND=5

# Optional: Timeout Settings (in seconds)
HTTP_TIMEOUT=30
GOOGLE_PLACES_TIMEOUT=10
RAKUTEN_TIMEOUT=15